<h1>Hi <%=name %></h1>

<h1>Add Courses</h1>
<form action="/addCourse" method="POST">
  <div>
    <label for="courseID">Course ID</label>
    <input type="text" id="courseID" name="courseID" required>
  </div>
  <div>
    <label for="courseName">Course Name</label>
    <input type="text" id="courseName" name="courseName" required>
  </div>
  <div>
    <label for="instructor">Instructor</label>
    <input type="text" id="instructor" name="instructor" required>
  </div>

<div>
    <label for="courseDay">Day</label>
    <input type="text" id="courseDay" name="courseDay" required>
  </div>

  <div>
    <label for="courseTime">Time</label>
    <input type="time" id="courseTime" name="courseTime" required>
  </div>

  <br>
  <button type="submit">Add Course</button>
</form>

<br>

<h1>Assign Courses</h1>
<form action="/assignCourse" method="POST">
    <div>
        <label for="courseID">Course ID</label>
        <input type="text" id="courseID" name="courseID" required>
    </div>
  <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>
  </div>
  <div>
    <select name="role" id="role">
        <option value="Student">Student</option>
        <option value="Lecturer">Lecturer</option>
    </select>
  </div>
    <br>
  <button type="submit">Assign Course</button>
</form>

<br>

<form action="/logout?_method=" method="POST">
  <button type="submit">Log Out</button>
</form>

